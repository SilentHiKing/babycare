<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llCardActions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/viewActionDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="?attr/line10" />

    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEdit"
            style="@style/TextAppearance.BabyCare.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/bg_r6_block_gridview"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:minHeight="32dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="@string/edit"
            android:textColor="?attr/colorBrand" />

        <TextView
            android:id="@+id/tvSecondaryAction"
            style="@style/TextAppearance.BabyCare.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="?attr/bg_r6_block_gridview"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:minHeight="32dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textColor="?attr/colorTextSecondary"
            android:visibility="gone"
            tools:text="@string/delete_baby"
            tools:visibility="visible" />

    </LinearLayout>
</LinearLayout>
