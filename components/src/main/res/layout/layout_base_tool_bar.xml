<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="?attr/primary_bg_default"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <!-- 左侧操作区域 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLeftActions"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/item_toolbar_left_action"
        tools:visibility="visible" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextAppearance.BabyCare.Heading2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:textColor="?attr/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="页面标题" />

    <!-- 右侧操作区域 -->
    <LinearLayout
        android:id="@+id/llRightActions"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 右侧多动作列表（多于一个时使用） -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:visibility="gone"
            tools:itemCount="2"
            tools:listitem="@layout/item_toolbar_action"
            tools:visibility="visible" />

    </LinearLayout>

</merge>


