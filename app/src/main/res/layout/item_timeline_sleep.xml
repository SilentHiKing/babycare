<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="?attr/colorSurface"
    android:paddingHorizontal="50dp">

    <Space
        android:id="@+id/spaceTop"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 开始时间 -->
    <TextView
        android:id="@+id/tvStartTime"
        style="@style/TextAppearance.BabyCare.Body2"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="?attr/colorTextPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceTop"
        tools:text="09:30" />

    <!-- 时间轴线（上） -->
    <View
        android:id="@+id/vTimelineLineTop"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?attr/line10"
        app:layout_constraintBottom_toTopOf="@id/vTimelineDot"
        app:layout_constraintEnd_toEndOf="@id/vTimelineDot"
        app:layout_constraintStart_toStartOf="@id/vTimelineDot"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 时间轴点 -->
    <View
        android:id="@+id/vTimelineDot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/circle_white"
        android:backgroundTint="@color/sleep_primary"
        app:layout_constraintBottom_toBottomOf="@id/tvStartTime"
        app:layout_constraintStart_toEndOf="@id/tvStartTime"
        app:layout_constraintTop_toTopOf="@id/tvStartTime" />

    <!-- 时间轴线（下） -->
    <View
        android:id="@+id/vTimelineLineBottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?attr/line10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vTimelineDot"
        app:layout_constraintStart_toStartOf="@id/vTimelineDot"
        app:layout_constraintTop_toBottomOf="@id/vTimelineDot" />

    <!-- 图标 -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@null"
        android:padding="4dp"
        android:background="@drawable/bg_event_icon_circle"
        android:backgroundTint="@color/sleep_bg"
        android:src="@drawable/ic_sleep"
        app:layout_constraintBottom_toBottomOf="@id/tvStartTime"
        app:layout_constraintStart_toEndOf="@id/vTimelineDot"
        app:layout_constraintTop_toTopOf="@id/tvStartTime"
        app:tint="@color/sleep_primary" />

    <!-- 标题：与时间同一水平线（居中对齐） -->
    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextAppearance.BabyCare.Heading3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:text="@string/sleeping"
        android:textColor="?attr/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="@id/tvStartTime"
        app:layout_constraintEnd_toStartOf="@id/tvDuration"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="@id/tvStartTime" />

    <!-- 时长：同一水平线（居中对齐） -->
    <TextView
        android:id="@+id/tvDuration"
        style="@style/TextAppearance.BabyCare.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/sleep_primary"
        app:layout_constraintBottom_toBottomOf="@id/tvStartTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvStartTime"
        tools:text="2h15m" />

    <!-- 结束时间（可选） -->
    <TextView
        android:id="@+id/tvEndTime"
        style="@style/TextAppearance.BabyCare.Label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="?attr/colorTextHint"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/ivIcon"
        tools:text="- 11:45"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ivIcon,tvEndTime" />

    <!-- 备注（可选） -->
    <TextView
        android:id="@+id/tvNote"
        style="@style/TextAppearance.BabyCare.Label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/colorTextHint"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/barDetail"
        tools:text="备注：睡得很香"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barContentBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ivIcon,tvEndTime,tvNote" />

    <Space
        android:id="@+id/spaceBottom"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barContentBottom" />

</androidx.constraintlayout.widget.ConstraintLayout>


