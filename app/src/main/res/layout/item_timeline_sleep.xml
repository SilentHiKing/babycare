<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg_r12_secondary_bg_default"
    android:layout_marginBottom="@dimen/dp_8"
    android:padding="@dimen/dp_12">

    <!-- 开始时间 -->
    <TextView
        android:id="@+id/tvStartTime"
        style="@style/BoldTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/primary90"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="09:30" />

    <!-- 结束时间 -->
    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:textColor="?attr/weaken40"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBaseline_toBaselineOf="@id/tvStartTime"
        app:layout_constraintStart_toEndOf="@id/tvStartTime"
        tools:text="- 11:45" />

    <!-- 时间轴点 -->
    <View
        android:id="@+id/vTimelineDot"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/circle_white"
        android:backgroundTint="@color/sleep_primary"
        app:layout_constraintBottom_toBottomOf="@id/tvStartTime"
        app:layout_constraintStart_toEndOf="@id/tvEndTime"
        app:layout_constraintTop_toTopOf="@id/tvStartTime" />

    <!-- 图标 -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_12"
        android:padding="@dimen/dp_4"
        android:background="@drawable/bg_event_icon_circle"
        android:backgroundTint="@color/sleep_bg"
        android:src="@drawable/ic_sleep"
        app:layout_constraintStart_toEndOf="@id/vTimelineDot"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/sleep_primary" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvTitle"
        style="@style/BoldTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/sleeping"
        android:textColor="?attr/primary90"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@id/ivIcon"
        app:layout_constraintEnd_toStartOf="@id/tvDuration"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="@id/ivIcon" />

    <!-- 时长 -->
    <TextView
        android:id="@+id/tvDuration"
        style="@style/BoldTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sleep_primary"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        tools:text="2h15m" />

    <!-- 备注（可选） -->
    <TextView
        android:id="@+id/tvNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/weaken40"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/ivIcon"
        tools:text="备注：睡得很香"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

