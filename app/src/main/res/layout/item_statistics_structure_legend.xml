<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llLegend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:id="@+id/viewLegendColor"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_circle_dot" />

    <TextView
        android:id="@+id/tvLegendLabel"
        style="@style/TextAppearance.BabyCare.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_weight="1"
        android:textColor="?attr/colorTextPrimary" />

    <TextView
        android:id="@+id/tvLegendValue"
        style="@style/TextAppearance.BabyCare.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorTextHint" />

</LinearLayout>


