<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llHealth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    android:background="?attr/secondary_bg_default"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/tvHealthTitle"
        style="@style/TextAppearance.BabyCare.Heading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_health_title" />

    <TextView
        android:id="@+id/tvHealthRange"
        style="@style/TextAppearance.BabyCare.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="?attr/colorTextHint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/bg_r8_block_gridview"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tvHealthTotal"
            style="@style/TextAppearance.BabyCare.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorTextPrimary"
            android:fontFamily="sans-serif-medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHealthTemperature"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/colorTextHint" />

            <TextView
                android:id="@+id/tvHealthMedicine"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/colorTextHint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHealthDoctor"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/colorTextHint" />

            <TextView
                android:id="@+id/tvHealthSymptom"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/colorTextHint" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?attr/line10" />

        <TextView
            android:id="@+id/tvHealthVaccine"
            style="@style/TextAppearance.BabyCare.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?attr/colorTextPrimary" />

        <TextView
            android:id="@+id/tvHealthLastVaccine"
            style="@style/TextAppearance.BabyCare.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?attr/colorTextHint" />
    </LinearLayout>

</LinearLayout>


