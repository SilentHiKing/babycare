<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg_r12_secondary_bg_default"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <!-- 时间段选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 开始时间 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_8"
                android:background="?attr/bg_r6_block_gridview"
                android:gravity="center"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_16"
                tools:text="14:30" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="@null"
            app:tint="?attr/weaken40"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

        <!-- 结束时间 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_end_time"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_8"
                android:background="?attr/bg_r6_block_gridview"
                android:gravity="center"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_16"
                tools:text="15:00" />

        </LinearLayout>

    </LinearLayout>

    <!-- 时长显示 -->
    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        android:textColor="?attr/semantics_blue"
        android:textSize="@dimen/sp_14"
        tools:text="活动时长：30 分钟" />

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/dp_16"
        android:background="?attr/line10" />

    <!-- 或使用计时器 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/use_timer"
        android:textColor="?attr/weaken40"
        android:textSize="@dimen/sp_13" />

    <com.zero.components.widget.RecordView
        android:id="@+id/rvTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12" />

</LinearLayout>

