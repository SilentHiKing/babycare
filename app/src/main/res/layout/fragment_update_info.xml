<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <!-- 使用通用 Toolbar -->
    <com.zero.components.widget.BaseToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarTitle="@string/babyInfo" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="40dp">

            <!-- 卡片容器 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_prediction"
                android:elevation="?attr/elevationMedium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="20dp">

                <!-- 姓名 -->
                <TextView
                    android:id="@+id/labelName"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/babyName"
                    android:textColor="?attr/colorTextPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/layoutName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/bg_r6_block_gridview"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    app:layout_constraintTop_toBottomOf="@id/labelName">

                    <EditText
                        android:id="@+id/etName"
                        style="@style/TextAppearance.BabyCare.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/babyNameHint"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="?attr/colorTextPrimary"
                        android:textColorHint="?attr/colorTextHint" />
                </LinearLayout>

                <!-- 生日 -->
                <TextView
                    android:id="@+id/labelBirthday"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/babyBirthday"
                    android:textColor="?attr/colorTextPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutName" />

                <LinearLayout
                    android:id="@+id/layoutBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/bg_r6_block_gridview"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    app:layout_constraintTop_toBottomOf="@id/labelBirthday">

                    <EditText
                        android:id="@+id/etBirthday"
                        style="@style/TextAppearance.BabyCare.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/babyBirthdayHint"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="?attr/colorTextPrimary"
                        android:textColorHint="?attr/colorTextHint" />
                </LinearLayout>

                <!-- 性别 -->
                <TextView
                    android:id="@+id/labelGender"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/babyGender"
                    android:textColor="?attr/colorTextPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutBirthday" />

                <LinearLayout
                    android:id="@+id/layoutGender"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/bg_r6_block_gridview"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    app:layout_constraintTop_toBottomOf="@id/labelGender">

                    <EditText
                        android:id="@+id/etGender"
                        style="@style/TextAppearance.BabyCare.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/babyGenderHint"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="?attr/colorTextPrimary"
                        android:textColorHint="?attr/colorTextHint" />
                </LinearLayout>

                <!-- 体重 -->
                <TextView
                    android:id="@+id/labelWeight"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/babyWeight"
                    android:textColor="?attr/colorTextPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutGender" />

                <LinearLayout
                    android:id="@+id/layoutWeight"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/bg_r6_block_gridview"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    app:layout_constraintTop_toBottomOf="@id/labelWeight">

                    <EditText
                        android:id="@+id/etWeight"
                        style="@style/TextAppearance.BabyCare.Body2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789."
                        android:hint="@string/babyWeightHint"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="?attr/colorTextPrimary"
                        android:textColorHint="?attr/colorTextHint" />

                    <TextView
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_g"
                        android:textColor="?attr/colorTextSecondary" />
                </LinearLayout>

                <!-- 身高 -->
                <TextView
                    android:id="@+id/labelHeight"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/babyHeight"
                    android:textColor="?attr/colorTextPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutWeight" />

                <LinearLayout
                    android:id="@+id/layoutHeight"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/bg_r6_block_gridview"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    app:layout_constraintTop_toBottomOf="@id/labelHeight">

                    <EditText
                        android:id="@+id/etHeight"
                        style="@style/TextAppearance.BabyCare.Body2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789."
                        android:hint="@string/babyHeightHint"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="?attr/colorTextPrimary"
                        android:textColorHint="?attr/colorTextHint" />

                    <TextView
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_cm"
                        android:textColor="?attr/colorTextSecondary" />
                </LinearLayout>

                <!-- 血型 -->
                <TextView
                    android:id="@+id/labelBloodType"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/babyBloodType"
                    android:textColor="?attr/colorTextPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutHeight" />

                <LinearLayout
                    android:id="@+id/layoutBloodType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/bg_r6_block_gridview"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    app:layout_constraintTop_toBottomOf="@id/labelBloodType">

                    <EditText
                        android:id="@+id/etBloodType"
                        style="@style/TextAppearance.BabyCare.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/babyBloodTypeHint"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="?attr/colorTextPrimary"
                        android:textColorHint="?attr/colorTextHint" />
                </LinearLayout>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 删除按钮 -->
            <TextView
                android:id="@+id/tvDelete"
                style="@style/TextAppearance.BabyCare.Body1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="?attr/bg_r6_block_gridview"
                android:gravity="center"
                android:text="@string/delete_baby"
                android:textColor="?attr/semantics_warning_red"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
