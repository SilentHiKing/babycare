<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="?attr/secondary_bg_default"
    android:fitsSystemWindows="true">

    <!-- 当前宝宝信息区域 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBabyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/primary_bg_brand"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingTop="@dimen/dp_60"
        android:paddingBottom="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 宝宝头像 -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:background="?attr/bg_r999_block_gridview"
            android:padding="@dimen/dp_12"
            android:src="@drawable/ic_baby_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 宝宝名字 -->
        <TextView
            android:id="@+id/tvBabyName"
            style="@style/BoldTextAppearance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/primary90"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="@id/ivAvatar"
            tools:text="小明" />

        <!-- 出生天数 -->
        <TextView
            android:id="@+id/tvBabyDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="?attr/weaken40"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvBabyName"
            tools:text="已出生 180 天" />

        <!-- 性别图标 -->
        <ImageView
            android:id="@+id/ivGender"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:src="@drawable/ic_gender_boy"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvBabyDays"
            tools:visibility="visible" />

        <!-- 查看详情箭头 -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_arrow_right"
            android:tint="?attr/weaken40"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivAvatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 分隔线 -->
    <View
        android:id="@+id/divider1"
        style="@style/divide_horizontal_line"
        app:layout_constraintTop_toBottomOf="@id/clBabyInfo" />

    <!-- 菜单列表 -->
    <LinearLayout
        android:id="@+id/llMenuList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/divider1">

        <!-- 所有宝宝 -->
        <LinearLayout
            android:id="@+id/llAllBabies"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_20">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_all_babies"
                android:tint="?attr/icon_brand" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_weight="1"
                android:text="@string/all_babies"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/ic_arrow_right"
                android:tint="?attr/weaken40" />

        </LinearLayout>

        <!-- 数据统计 -->
        <LinearLayout
            android:id="@+id/llStatistics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_20">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_statistics"
                android:tint="?attr/icon_brand" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_weight="1"
                android:text="@string/data_statistics"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/ic_arrow_right"
                android:tint="?attr/weaken40" />

        </LinearLayout>

        <!-- 设置 -->
        <LinearLayout
            android:id="@+id/llSettings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_20">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_settings"
                android:tint="?attr/icon_brand" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_weight="1"
                android:text="@string/settings"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/ic_arrow_right"
                android:tint="?attr/weaken40" />

        </LinearLayout>

    </LinearLayout>

    <!-- 底部版本号 -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:textColor="?attr/weaken40"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="v1.0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

