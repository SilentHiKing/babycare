<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/llDrawerContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/tvVersion"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 当前宝宝信息区域 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBabyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_r12_secondary_bg_default"
            android:padding="16dp">

            <!-- 宝宝头像 -->
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/bg_r999_block_gridview"
                android:padding="10dp"
                android:src="@drawable/ic_baby_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 宝宝名字 -->
            <TextView
                android:id="@+id/tvBabyName"
                style="@style/TextAppearance.BabyCare.Heading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorTextPrimary"
                app:layout_constraintEnd_toStartOf="@id/ivArrow"
                app:layout_constraintStart_toEndOf="@id/ivAvatar"
                app:layout_constraintTop_toTopOf="@id/ivAvatar"
                tools:text="小明" />

            <!-- 出生天数 -->
            <TextView
                android:id="@+id/tvBabyDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:textColor="?attr/colorTextSecondary"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/ivArrow"
                app:layout_constraintStart_toEndOf="@id/ivAvatar"
                app:layout_constraintTop_toBottomOf="@id/tvBabyName"
                tools:text="已出生 180 天" />

            <!-- 性别图标 -->
            <ImageView
                android:id="@+id/ivGender"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_gender_boy"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/ivAvatar"
                app:layout_constraintTop_toBottomOf="@id/tvBabyDays"
                tools:visibility="visible" />

            <!-- 查看详情箭头 -->
            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="?attr/weaken40"
                app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivAvatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 菜单列表卡片 -->
        <LinearLayout
            android:id="@+id/llMenuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_r12_secondary_bg_default"
            android:orientation="vertical"
            android:paddingVertical="6dp">

        <!-- 所有宝宝 -->
        <LinearLayout
            android:id="@+id/llAllBabies"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_all_babies"
                android:tint="?attr/colorBrand" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="@string/all_babies"
                android:textColor="?attr/colorTextPrimary"
                style="@style/TextAppearance.BabyCare.Body1" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="?attr/weaken40" />

        </LinearLayout>

        <View
            style="@style/divide_horizontal_line"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="12dp" />

        <!-- 设置 -->
        <LinearLayout
            android:id="@+id/llSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_settings"
                android:tint="?attr/colorBrand" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="@string/settings"
                android:textColor="?attr/colorTextPrimary"
                style="@style/TextAppearance.BabyCare.Body1" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="?attr/weaken40" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <!-- 底部版本号 -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="?attr/weaken40"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="v1.0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>


