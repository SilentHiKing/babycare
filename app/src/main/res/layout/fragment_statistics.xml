<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primary_bg_default"
    android:paddingTop="@dimen/dp_45">

    <com.zero.components.widget.BaseToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ==================== 日历区域 ==================== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/calendarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/secondary_bg_default"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_12">

                <!-- 月份标题 -->
                <ImageView
                    android:id="@+id/ivPrevious"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_back"
                    android:rotation="0"
                    app:layout_constraintBottom_toBottomOf="@id/tvCalendarTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvCalendarTitle"
                    app:tint="?attr/weaken40" />

                <TextView
                    android:id="@+id/tvCalendarTitle"
                    style="@style/BoldTextAppearance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="?attr/primary90"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintEnd_toStartOf="@id/ivNext"
                    app:layout_constraintStart_toEndOf="@id/ivPrevious"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2024年1月 第2周" />

                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="@id/tvCalendarTitle"
                    app:layout_constraintEnd_toStartOf="@id/tvToday"
                    app:layout_constraintTop_toTopOf="@id/tvCalendarTitle"
                    app:tint="?attr/weaken40" />

                <TextView
                    android:id="@+id/tvToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/bg_r999_stroke1_line1"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_4"
                    android:text="@string/today"
                    android:textColor="?attr/weaken40"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@id/tvCalendarTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvCalendarTitle" />

                <!-- 日历控件 -->
                <com.zero.babycare.statistics.widget.BabyCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    app:layout_constraintTop_toBottomOf="@id/tvCalendarTitle" />

                <!-- 展开/收起指示器 -->
                <ImageView
                    android:id="@+id/ivExpandIndicator"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_4"
                    android:src="@drawable/ic_arrow_right"
                    android:rotation="90"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calendarView"
                    app:tint="?attr/weaken40" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ==================== 当日统计摘要 ==================== -->
            <LinearLayout
                android:id="@+id/llSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:background="?attr/bg_r12_secondary_bg_default"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <!-- 喂养统计 -->
                <LinearLayout
                    android:id="@+id/llFeedingSummary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/ic_feeding"
                        app:tint="@color/feeding_primary" />

                    <TextView
                        android:id="@+id/tvFeedingCount"
                        style="@style/BoldTextAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/feeding_primary"
                        android:textSize="@dimen/sp_16"
                        tools:text="5次" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feeding"
                        android:textColor="?attr/weaken40"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/dp_8"
                    android:background="?attr/line10" />

                <!-- 睡眠统计 -->
                <LinearLayout
                    android:id="@+id/llSleepSummary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/ic_sleep"
                        app:tint="@color/sleep_primary" />

                    <TextView
                        android:id="@+id/tvSleepDuration"
                        style="@style/BoldTextAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/sleep_primary"
                        android:textSize="@dimen/sp_16"
                        tools:text="4h30m" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sleeping"
                        android:textColor="?attr/weaken40"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/dp_8"
                    android:background="?attr/line10" />

                <!-- 尿布统计 -->
                <LinearLayout
                    android:id="@+id/llDiaperSummary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/ic_event_diaper"
                        app:tint="@color/event_diaper" />

                    <TextView
                        android:id="@+id/tvDiaperCount"
                        style="@style/BoldTextAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/event_diaper"
                        android:textSize="@dimen/sp_16"
                        tools:text="8次" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diaper"
                        android:textColor="?attr/weaken40"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/dp_8"
                    android:background="?attr/line10" />

                <!-- 其他事件统计 -->
                <LinearLayout
                    android:id="@+id/llOtherSummary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/ic_event_other"
                        app:tint="@color/event_other" />

                    <TextView
                        android:id="@+id/tvOtherCount"
                        style="@style/BoldTextAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/event_other"
                        android:textSize="@dimen/sp_16"
                        tools:text="3次" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other"
                        android:textColor="?attr/weaken40"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>

            </LinearLayout>

            <!-- ==================== 时间轴标题 ==================== -->
            <TextView
                android:id="@+id/tvTimelineTitle"
                style="@style/BoldTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/daily_records"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_16" />

            <!-- ==================== 时间轴列表 ==================== -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <!-- ==================== 空状态 ==================== -->
            <LinearLayout
                android:id="@+id/llEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_60"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:alpha="0.5"
                    android:src="@drawable/ic_record"
                    app:tint="?attr/weaken40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/no_records_today"
                    android:textColor="?attr/weaken40"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvAddRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="?attr/bg_r999_brand_color"
                    android:paddingHorizontal="@dimen/dp_20"
                    android:paddingVertical="@dimen/dp_10"
                    android:text="@string/add_record"
                    android:textColor="@color/White100"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

