<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llGrowth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="?attr/secondary_bg_default"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/bg_r8_block_gridview"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/tvGrowthTitle"
            style="@style/TextAppearance.BabyCare.Heading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistics_growth_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWeightLabel"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics_growth_weight"
                    android:textColor="?attr/colorTextHint" />

                <TextView
                    android:id="@+id/tvWeightValue"
                    style="@style/TextAppearance.BabyCare.Heading3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorTextPrimary"
                    tools:text="6.2kg" />

                <TextView
                    android:id="@+id/tvWeightDiff"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="?attr/colorTextHint"
                    tools:text="较上次 +0.2kg" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="6dp"
                android:background="?attr/line10" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeightLabel"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics_growth_height"
                    android:textColor="?attr/colorTextHint" />

                <TextView
                    android:id="@+id/tvHeightValue"
                    style="@style/TextAppearance.BabyCare.Heading3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorTextPrimary"
                    tools:text="62.4cm" />

                <TextView
                    android:id="@+id/tvHeightDiff"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="?attr/colorTextHint"
                    tools:text="较上次 +1.2cm" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="6dp"
                android:background="?attr/line10" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeadLabel"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics_growth_head"
                    android:textColor="?attr/colorTextHint" />

                <TextView
                    android:id="@+id/tvHeadValue"
                    style="@style/TextAppearance.BabyCare.Heading3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorTextPrimary"
                    tools:text="41.2cm" />

                <TextView
                    android:id="@+id/tvHeadDiff"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="?attr/colorTextHint"
                    tools:text="较上次 +0.8cm" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


