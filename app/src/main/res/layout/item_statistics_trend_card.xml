<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTrendCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg_r8_block_gridview"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_12"
    android:paddingVertical="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTrendPeriod"
            style="@style/BoldTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/primary90"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvTrendRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="?attr/weaken40"
            android:textSize="@dimen/sp_11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrendFeedingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_trend_metric_feeding"
                android:textColor="?attr/weaken40"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tvTrendFeedingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrendSleepLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_trend_metric_sleep"
                android:textColor="?attr/weaken40"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tvTrendSleepValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrendDiaperLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_trend_metric_diaper"
                android:textColor="?attr/weaken40"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tvTrendDiaperValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrendEventLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_trend_metric_event"
                android:textColor="?attr/weaken40"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tvTrendEventValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="?attr/primary90"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
