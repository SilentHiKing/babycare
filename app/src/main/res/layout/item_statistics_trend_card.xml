<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTrendCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg_r8_block_gridview"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTrendPeriod"
            style="@style/TextAppearance.BabyCare.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorTextPrimary"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvTrendRange"
            style="@style/TextAppearance.BabyCare.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="?attr/colorTextHint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrendFeedingLabel"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_trend_metric_feeding"
                android:textColor="?attr/colorTextHint" />

            <TextView
                android:id="@+id/tvTrendFeedingValue"
                style="@style/TextAppearance.BabyCare.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorTextPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrendSleepLabel"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_trend_metric_sleep"
                android:textColor="?attr/colorTextHint" />

            <TextView
                android:id="@+id/tvTrendSleepValue"
                style="@style/TextAppearance.BabyCare.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorTextPrimary" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrendDiaperLabel"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_trend_metric_diaper"
                android:textColor="?attr/colorTextHint" />

            <TextView
                android:id="@+id/tvTrendDiaperValue"
                style="@style/TextAppearance.BabyCare.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorTextPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrendEventLabel"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_trend_metric_event"
                android:textColor="?attr/colorTextHint" />

            <TextView
                android:id="@+id/tvTrendEventValue"
                style="@style/TextAppearance.BabyCare.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorTextPrimary" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


