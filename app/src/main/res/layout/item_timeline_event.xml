<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:background="?attr/secondary_bg_default"
    android:paddingHorizontal="@dimen/dp_50">

    <Space
        android:id="@+id/spaceTop"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 时间 -->
    <TextView
        android:id="@+id/tvTime"
        style="@style/BoldTextAppearance"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_32"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="?attr/primary90"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceTop"
        tools:text="09:15" />

    <!-- 时间轴线（上） -->
    <View
        android:id="@+id/vTimelineLineTop"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:background="?attr/weaken40"
        app:layout_constraintBottom_toTopOf="@id/vTimelineDot"
        app:layout_constraintEnd_toEndOf="@id/vTimelineDot"
        app:layout_constraintStart_toStartOf="@id/vTimelineDot"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 时间轴点 -->
    <View
        android:id="@+id/vTimelineDot"
        android:layout_width="@dimen/dp_6"
        android:layout_height="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_6"
        android:background="@drawable/circle_white"
        android:backgroundTint="@color/event_diaper"
        app:layout_constraintBottom_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toEndOf="@id/tvTime"
        app:layout_constraintTop_toTopOf="@id/tvTime" />

    <!-- 时间轴线（下） -->
    <View
        android:id="@+id/vTimelineLineBottom"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:background="?attr/weaken40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vTimelineDot"
        app:layout_constraintStart_toStartOf="@id/vTimelineDot"
        app:layout_constraintTop_toBottomOf="@id/vTimelineDot" />

    <!-- 图标 -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_12"
        android:padding="@dimen/dp_4"
        android:background="@drawable/bg_event_icon_circle"
        android:backgroundTint="@color/event_diaper_light"
        android:src="@drawable/ic_event_diaper"
        app:layout_constraintBottom_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toEndOf="@id/vTimelineDot"
        app:layout_constraintTop_toTopOf="@id/tvTime"
        app:tint="@color/event_diaper" />

    <!-- 标题：与时间同一水平线（居中对齐） -->
    <TextView
        android:id="@+id/tvTitle"
        style="@style/BoldTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:textColor="?attr/primary90"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@id/tvTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="@id/tvTime"
        tools:text="换尿布（湿）" />

    <!-- 详情信息（可选） -->
    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="?attr/weaken40"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/ivIcon"
        tools:text="体温：37.2°C"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ivIcon,tvDetail" />

    <!-- 备注（可选） -->
    <TextView
        android:id="@+id/tvNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/weaken40"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/barDetail"
        tools:text="备注：颜色正常" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barContentBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ivIcon,tvDetail,tvNote" />

    <Space
        android:id="@+id/spaceBottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barContentBottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
