<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="?attr/colorSurface"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextAppearance.BabyCare.Heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorTextPrimary"
                android:fontFamily="sans-serif-medium" />


            <TextView
                android:id="@+id/tvContent"
                style="@style/TextAppearance.BabyCare.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="?attr/colorTextSecondary" />

            <TextView
                android:id="@+id/tvDesc"
                style="@style/TextAppearance.BabyCare.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="?attr/colorTextHint" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>



