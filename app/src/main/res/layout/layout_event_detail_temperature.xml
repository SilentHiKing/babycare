<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg_r12_secondary_bg_default"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 体温输入 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etTemperature"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/bg_r6_block_gridview"
            android:gravity="center"
            android:hint="@string/temperature_value_hint"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textColor="?attr/primary90"
            android:textColorHint="?attr/weaken40"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/temperature_unit"
            android:textColor="?attr/primary90"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- 体温状态提示 -->
    <LinearLayout
        android:id="@+id/llTemperatureStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?attr/bg_r6_block_gridview"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            tools:src="@drawable/ic_check" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            tools:text="@string/temperature_normal"
            tools:textColor="@color/temp_normal" />

    </LinearLayout>

    <!-- 测量部位 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/temperature_location_label"
        android:textColor="?attr/primary90"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgTemperatureLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbTempEar"
            style="@style/EventDetailRadioButton"
            android:text="@string/temperature_location_ear" />

        <RadioButton
            android:id="@+id/rbTempForehead"
            style="@style/EventDetailRadioButton"
            android:text="@string/temperature_location_forehead" />

        <RadioButton
            android:id="@+id/rbTempArmpit"
            style="@style/EventDetailRadioButton"
            android:text="@string/temperature_location_armpit" />

        <RadioButton
            android:id="@+id/rbTempOral"
            style="@style/EventDetailRadioButton"
            android:text="@string/temperature_location_oral" />

        <RadioButton
            android:id="@+id/rbTempRectal"
            style="@style/EventDetailRadioButton"
            android:text="@string/temperature_location_rectal" />

    </RadioGroup>

    <!-- 高温警告 -->
    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/temperature_danger"
        android:textColor="@color/temp_danger"
        android:textSize="13sp"
        android:visibility="gone" />

</LinearLayout>


