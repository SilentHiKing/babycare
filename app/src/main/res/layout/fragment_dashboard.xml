<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <com.zero.components.widget.BaseToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- ==================== 实时状态卡片 ==================== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_status_card_awake"
                android:elevation="?attr/elevationMedium"
                android:outlineProvider="background"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/ivStatusIcon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_baby_awake"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvStatusTitle"
                    style="@style/TextAppearance.BabyCare.Heading2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="?attr/colorStatusTextPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivStatusIcon"
                    app:layout_constraintTop_toTopOf="@id/ivStatusIcon"
                    tools:text="宝宝正在睡觉中..." />

                <TextView
                    android:id="@+id/tvStatusTime"
                    style="@style/TextAppearance.BabyCare.Display1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorStatusTextSecondary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivStatusIcon"
                    app:layout_constraintTop_toBottomOf="@id/tvStatusTitle"
                    tools:text="已睡 01:23:45" />

                <TextView
                    android:id="@+id/tvStatusAction"
                    style="@style/TextAppearance.BabyCare.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="?attr/bg_r999_secondary_bg_default"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="@string/end_record"
                    android:textColor="?attr/colorStatusTextPrimary"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivStatusIcon"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ==================== 距上次时间卡片 ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- 喂养卡片 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardFeeding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_feeding"
                    android:elevation="?attr/elevationMedium"
                    android:outlineProvider="background"
                    android:padding="16dp">

                <ImageView
                    android:id="@+id/ivFeedingIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_feeding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/feeding_primary" />

                    <TextView
                        android:id="@+id/tvFeedingLabel"
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/feeding"
                        android:textColor="@color/feeding_primary"
                        app:layout_constraintBottom_toBottomOf="@id/ivFeedingIcon"
                        app:layout_constraintStart_toEndOf="@id/ivFeedingIcon"
                        app:layout_constraintTop_toTopOf="@id/ivFeedingIcon" />

                    <TextView
                        android:id="@+id/tvFeedingSinceTime"
                        style="@style/TextAppearance.BabyCare.Display2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/feeding_primary_dark"
                        app:layout_constraintTop_toBottomOf="@id/ivFeedingIcon"
                        tools:text="2小时15分" />

                    <TextView
                        android:id="@+id/tvFeedingSinceLabel"
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/since_last"
                        android:textColor="@color/feeding_secondary"
                        app:layout_constraintTop_toBottomOf="@id/tvFeedingSinceTime" />

                    <View
                        android:id="@+id/dividerFeeding"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/feeding_divider"
                        app:layout_constraintTop_toBottomOf="@id/tvFeedingSinceLabel" />

                    <TextView
                        android:id="@+id/tvFeedingTodayCount"
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/feeding_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dividerFeeding"
                        tools:text="今日 5次" />

                    <TextView
                        android:id="@+id/tvFeedingTodayDuration"
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/feeding_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvFeedingTodayCount"
                        tools:text="共 1小时20分" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 睡眠卡片 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardSleep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_sleep"
                    android:elevation="?attr/elevationMedium"
                    android:outlineProvider="background"
                    android:padding="16dp">

                <ImageView
                    android:id="@+id/ivSleepIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_sleep"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/sleep_primary" />

                    <TextView
                        android:id="@+id/tvSleepLabel"
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/sleeping"
                        android:textColor="@color/sleep_primary"
                        app:layout_constraintBottom_toBottomOf="@id/ivSleepIcon"
                        app:layout_constraintStart_toEndOf="@id/ivSleepIcon"
                        app:layout_constraintTop_toTopOf="@id/ivSleepIcon" />

                    <TextView
                        android:id="@+id/tvSleepSinceTime"
                        style="@style/TextAppearance.BabyCare.Display2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/sleep_primary_dark"
                        app:layout_constraintTop_toBottomOf="@id/ivSleepIcon"
                        tools:text="35分钟" />

                    <TextView
                        android:id="@+id/tvSleepSinceLabel"
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/since_last"
                        android:textColor="@color/sleep_secondary"
                        app:layout_constraintTop_toBottomOf="@id/tvSleepSinceTime" />

                    <View
                        android:id="@+id/dividerSleep"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/sleep_divider"
                        app:layout_constraintTop_toBottomOf="@id/tvSleepSinceLabel" />

                    <TextView
                        android:id="@+id/tvSleepTodayCount"
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/sleep_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dividerSleep"
                        tools:text="今日 3次" />

                    <TextView
                        android:id="@+id/tvSleepTodayDuration"
                        style="@style/TextAppearance.BabyCare.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/sleep_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSleepTodayCount"
                        tools:text="共 4小时30分" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!-- ==================== 下次预测区域 ==================== -->
            <TextView
                android:id="@+id/tvPredictionTitle"
                style="@style/TextAppearance.BabyCare.Heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/next_prediction"
                android:textColor="?attr/colorTextPrimary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardPrediction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card_prediction"
                android:elevation="?attr/elevationMedium"
                android:outlineProvider="background"
                android:padding="16dp">

            <!-- 喂养预测 -->
            <ImageView
                android:id="@+id/ivPredictFeeding"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_feeding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/feeding_primary" />

                <TextView
                    android:id="@+id/tvPredictFeedingTime"
                    style="@style/TextAppearance.BabyCare.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="?attr/colorTextPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/ivPredictFeeding"
                    app:layout_constraintEnd_toStartOf="@id/tvPredictFeedingRemain"
                    app:layout_constraintStart_toEndOf="@id/ivPredictFeeding"
                    app:layout_constraintTop_toTopOf="@id/ivPredictFeeding"
                    tools:text="下次喂奶 约 14:30" />

                <TextView
                    android:id="@+id/tvPredictFeedingRemain"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorTextHint"
                    app:layout_constraintBottom_toBottomOf="@id/ivPredictFeeding"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ivPredictFeeding"
                    tools:text="还有45分钟" />

                <View
                    android:id="@+id/dividerPredict"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="?attr/line10"
                    app:layout_constraintTop_toBottomOf="@id/ivPredictFeeding" />

            <!-- 睡眠预测 -->
            <ImageView
                android:id="@+id/ivPredictSleep"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_sleep"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dividerPredict"
                app:tint="@color/sleep_primary" />

                <TextView
                    android:id="@+id/tvPredictSleepTime"
                    style="@style/TextAppearance.BabyCare.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="?attr/colorTextPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/ivPredictSleep"
                    app:layout_constraintEnd_toStartOf="@id/tvPredictSleepRemain"
                    app:layout_constraintStart_toEndOf="@id/ivPredictSleep"
                    app:layout_constraintTop_toTopOf="@id/ivPredictSleep"
                    tools:text="下次睡觉 约 16:00" />

                <TextView
                    android:id="@+id/tvPredictSleepRemain"
                    style="@style/TextAppearance.BabyCare.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorTextHint"
                    app:layout_constraintBottom_toBottomOf="@id/ivPredictSleep"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ivPredictSleep"
                    tools:text="还有2小时" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ==================== 快速记录区域 ==================== -->
            <TextView
                android:id="@+id/tvQuickRecordTitle"
                style="@style/TextAppearance.BabyCare.Heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/quick_record"
                android:textColor="?attr/colorTextPrimary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuickRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card_prediction"
                android:elevation="?attr/elevationMedium"
                android:outlineProvider="background"
                android:clipToPadding="false"
                android:overScrollMode="never" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ==================== 底部快捷操作栏 ==================== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQuickActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/secondary_bg_default"
        android:clipToPadding="false"
        android:elevation="?attr/elevationMedium"
        android:overScrollMode="never"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
