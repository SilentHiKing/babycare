<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="?attr/bg_r12_secondary_bg_default"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="16dp">

    <!-- 当前选中标识 -->
    <ImageView
        android:id="@+id/ivSelected"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorBrand"
        tools:visibility="visible" />

    <!-- 宝宝头像 -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="?attr/bg_r999_block_gridview"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/ic_baby_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 宝宝名字 -->
    <TextView
        android:id="@+id/tvName"
        style="@style/TextAppearance.BabyCare.Heading3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorTextPrimary"
        app:layout_constraintEnd_toStartOf="@id/ivSelected"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintBottom_toTopOf="@id/tvInfo"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="小明" />

    <!-- 性别和天数 -->
    <TextView
        android:id="@+id/tvInfo"
        style="@style/TextAppearance.BabyCare.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:textColor="?attr/colorTextHint"
        app:layout_constraintEnd_toStartOf="@id/ivSelected"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintBottom_toTopOf="@id/tvBirthDate"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="♂ 男孩 · 180天" />

    <!-- 出生日期 -->
    <TextView
        android:id="@+id/tvBirthDate"
        style="@style/TextAppearance.BabyCare.Label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:textColor="?attr/colorTextHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        tools:text="出生: 2024-06-28" />

    <!-- 操作区分隔线 -->
    <include
        android:id="@+id/actionRow"
        layout="@layout/view_card_action_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBirthDate" />

</androidx.constraintlayout.widget.ConstraintLayout>



