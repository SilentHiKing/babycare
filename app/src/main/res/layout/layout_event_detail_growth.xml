<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg_r12_secondary_bg_default"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 数值输入 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etValue"
            style="@style/TextAppearance.BabyCare.Display2"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/bg_r6_block_gridview"
            android:gravity="center"
            android:hint="@string/number_decimal_zero"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:textColor="?attr/colorTextPrimary"
            android:textColorHint="?attr/colorTextHint"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvUnit"
            style="@style/TextAppearance.BabyCare.Heading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="?attr/colorTextPrimary"
            tools:text="kg" />

    </LinearLayout>

    <!-- 上次记录对比 -->
    <LinearLayout
        android:id="@+id/llLastRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            style="@style/TextAppearance.BabyCare.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_record"
            android:textColor="?attr/colorTextHint"
            />

        <TextView
            android:id="@+id/tvLastValue"
            style="@style/TextAppearance.BabyCare.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="?attr/colorTextPrimary"
            tools:text="5.32 kg (12月18日)" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvChange"
            style="@style/TextAppearance.BabyCare.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/event_growth"
            android:fontFamily="sans-serif-medium"
            tools:text="+0.18 kg ↑" />

    </LinearLayout>

</LinearLayout>


