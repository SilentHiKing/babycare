<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llGrowthPercentile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_12"
    android:background="?attr/secondary_bg_default"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_12"
    android:paddingVertical="@dimen/dp_12">

    <TextView
        android:id="@+id/tvGrowthPercentileTitle"
        style="@style/BoldTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_growth_percentile_title"
        android:textColor="?attr/primary90"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tvGrowthPercentileNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/statistics_growth_percentile_note_who"
        android:textColor="?attr/weaken40"
        android:textSize="@dimen/sp_11" />

    <include
        android:id="@+id/itemGrowthPercentileWeight"
        layout="@layout/item_statistics_growth_percentile_item"
        android:layout_marginTop="@dimen/dp_8" />

    <include
        android:id="@+id/itemGrowthPercentileHeight"
        layout="@layout/item_statistics_growth_percentile_item"
        android:layout_marginTop="@dimen/dp_8" />

    <include
        android:id="@+id/itemGrowthPercentileHead"
        layout="@layout/item_statistics_growth_percentile_item"
        android:layout_marginTop="@dimen/dp_8" />

</LinearLayout>
