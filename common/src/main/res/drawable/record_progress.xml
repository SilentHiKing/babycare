<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="ring" android:innerRadiusRatio="2.8" android:thicknessRatio="16" android:useLevel="false">
            <solid android:color="#c0c0c0"/> <!-- 背景颜色 -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape android:shape="ring" android:innerRadiusRatio="2.8" android:thicknessRatio="16">
            <gradient android:startColor="?attr/semantics_blue"
                android:endColor="?attr/semantics_blue"/>
        </shape>
    </item>
</layer-list>