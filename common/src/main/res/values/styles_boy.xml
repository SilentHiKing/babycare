<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        男孩主题 - 蓝色系
        继承 AppTheme，只覆盖需要变化的品牌色相关属性
    -->
    <style name="AppTheme.Boy" parent="AppTheme">
        <!-- ========== 系统品牌色 ========== -->
        <item name="brand_color">@color/boy_brand</item>
        <item name="colorPrimary">@color/boy_brand</item>
        <item name="colorPrimaryDark">@color/boy_brand_dark</item>
        <item name="colorAccent">@color/boy_accent</item>

        <!-- UI Tokens Override -->
        <item name="colorBrand">@color/boy_brand</item>
        <item name="colorBrandLight">@color/boy_brand_light</item>
        <item name="colorBrandDark">@color/boy_brand_dark</item>
        <item name="colorSurfaceVariant">@color/boy_bg_brand</item>

        <!-- ========== 按钮 ========== -->
        <item name="primary_btn_normal">@color/boy_brand</item>
        <item name="primary_btn_pressed">@color/boy_btn_pressed</item>

        <!-- ========== 背景 ========== -->
        <item name="primary_bg_brand">@color/boy_bg_brand</item>
        <item name="secondary_bg_brand">@color/boy_bg_brand</item>
        <item name="shape_bg_enable">@color/boy_brand_10</item>
        <item name="drawer_item_select_bg">@color/boy_brand_10</item>
        <item name="bg_add_web_title">@color/boy_brand_10</item>
        <item name="drag_item_merge_bg">@color/boy_brand_10</item>
        <item name="drag_cover">@color/boy_brand_10</item>
        <item name="feedback_option_bg">@color/boy_bg_brand</item>
        <item name="bg_canvas">@color/boy_bg_brand</item>

        <!-- ========== 文本/语义色 ========== -->
        <item name="semantics_blue">@color/boy_accent</item>
        <item name="colorStatusTextPrimary">@color/boy_accent</item>
        <item name="colorStatusTextSecondary">@color/boy_brand_dark</item>

        <!-- ========== 图标 ========== -->
        <item name="icon_brand">@color/boy_accent</item>
        <item name="icon_tipsblue">@color/boy_accent</item>
        <item name="ic_canvas_enable">@color/boy_accent</item>
        <item name="ic_canvas_enable1">@color/boy_brand_light</item>
        <item name="icon_brandHigh">@color/boy_brand_light</item>
        <item name="iconColorBrand">@color/boy_accent</item>

        <!-- ========== 线条 ========== -->
        <item name="line_brand">@color/boy_accent</item>
        <item name="line_drag_insert">@color/boy_brand_20</item>
        <item name="drag_insert_line">@color/boy_brand_20</item>

        <!-- ========== 其他 ========== -->
        <item name="colorBlueFade">@color/boy_brand_50</item>
        <item name="ic_adjust_no">@color/boy_brand_light</item>
        <item name="feedback_button_no_click">@color/boy_brand_50</item>
    </style>
</resources>
