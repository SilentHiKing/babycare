<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 中性主题（夜间）：仅覆盖品牌相关 Token -->
    <style name="AppTheme.Neutral" parent="AppTheme">
        <!-- ========== 系统品牌色 ========== -->
        <item name="brand_color">@color/neutral_brand</item>
        <item name="colorPrimary">@color/neutral_brand</item>
        <item name="colorPrimaryDark">@color/neutral_brand_dark</item>
        <item name="colorAccent">@color/neutral_accent</item>

        <!-- UI Tokens Override -->
        <item name="colorBrand">@color/neutral_brand</item>
        <item name="colorBrandLight">@color/neutral_brand_light</item>
        <item name="colorBrandDark">@color/neutral_brand_dark</item>
        <item name="colorSurfaceVariant">@color/neutral_bg_brand</item>

        <!-- ========== 按钮 ========== -->
        <item name="primary_btn_normal">@color/neutral_brand</item>
        <item name="primary_btn_pressed">@color/neutral_btn_pressed</item>

        <!-- ========== 文本/语义色 ========== -->
        <item name="semantics_blue">@color/neutral_accent</item>
        <item name="colorStatusTextPrimary">@color/neutral_accent</item>
        <item name="colorStatusTextSecondary">@color/neutral_brand_dark</item>

        <!-- ========== 图标 ========== -->
        <item name="icon_brand">@color/neutral_accent</item>
        <item name="icon_tipsblue">@color/neutral_accent</item>
        <item name="ic_canvas_enable">@color/neutral_accent</item>
        <item name="ic_canvas_enable1">@color/neutral_brand_light</item>
        <item name="icon_brandHigh">@color/neutral_brand_light</item>

        <!-- ========== 线条 ========== -->
        <item name="line_brand">@color/neutral_accent</item>

        <!-- ========== 其他 ========== -->
        <item name="colorBlueFade">@color/neutral_brand_50</item>
        <item name="ic_adjust_no">@color/neutral_brand_light</item>
        <item name="feedback_button_no_click">@color/neutral_brand_50</item>
    </style>
</resources>
